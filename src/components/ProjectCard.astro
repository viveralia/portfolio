---
import type { Project } from "../models";
import Chip from "./Chip.astro";
import IconButton from "./IconButton.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article>
  <div class="browser">
    <div class="buttons">
      <span class="button red"></span>
      <span class="button"></span>
      <span class="button green"></span>
    </div>
    <iframe loading="lazy" class="content" src={project.website}></iframe>
  </div>
  <header class="header">
    <h3 class="name">{project.name}</h3>
    <div class="icons">
      <IconButton
        iconName="ph:github-logo-bold"
        target="_blank"
        title={project.repoUrl
          ? `View ${project.name} source code in GitHub`
          : "Private repo | Source code not available"}
        href={project.repoUrl}
      />
      <IconButton
        iconName="ph:globe-simple-bold"
        target="_blank"
        title={`Visit ${project.name} website`}
        href={project.website}
      />
    </div>
  </header>
  <p class="description">{project.description}</p>
  <div class="topics">
    {project.topics.map((topic) => <Chip>{topic.name}</Chip>)}
  </div>
</article>

<style scoped lang="scss">
  .browser {
    border-radius: 4px;
    border: 1px solid var(--muted-color);
  }
  .buttons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    border-bottom: 1px solid var(--muted-color);
  }
  .button {
    display: block;
    width: 0.75rem;
    height: 0.75rem;
    background-color: var(--muted-color);
    border-radius: 50%;
  }
  .button.red {
    background-color: #df0909;
  }
  .button.green {
    background-color: #17b730;
  }
  .content {
    border: none;
    width: 100%;
    height: 500px;
    background-color: #ffffff;
    @media (min-width: 990px) {
      height: 700px;
    }
  }
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .name {
    font-family: var(--base-font-family);
    font-style: normal;
    font-weight: 500;
    font-size: 1.125rem;
    line-height: 1.5;
    color: var(--loud-color);
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    text-transform: capitalize;
  }
  .icons {
    display: flex;
    align-items: center;
    gap: 0.275rem;
  }
  .topics {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .description {
    font-family: var(--base-font-family);
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.5;
    color: var(--semi-muted-color);
    margin-bottom: 0.5rem;
    white-space: pre-wrap;
  }
</style>
